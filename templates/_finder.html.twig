<div class="box box-warning collapsed-box">
    <div class="box-header with-border" data-widget="collapse" style="cursor: pointer">
        <h3 class="box-title"><i class="fa fa-search"></i> Bilaketa aurreratua</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool"><i class="fa fa-plus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->

    <div class="box-body">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            {{ form(bilatzailea.mySearchForm(table, fields, finderdata),{'attr': {'id': 'frmFinder', 'autocomplete' : 'null'}}) }}
        </div>
        <div class="col-sm-1"></div>
    </div><!-- /.box-body -->

    <div class="box-footer text-center">
        <button id="btnFrmFinderReset" class="btn btn-secondary"><i class="fa fa-redo"></i>  Berrezarri</button>
        <button id="btnFrmFinderSubmit" class="btn btn-primary"><i class="fa fa-search"></i> Bilatu</button>
    </div>

</div>

<div class="box box-primary collapsed-box">
    <div class="box-header with-border" data-widget="collapse" style="cursor: pointer">
        <h3 class="box-title"><i class="fa fa-search"></i> Azken bilaketak</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool"><i class="fa fa-plus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->

    <div class="box-body">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <table class="table table-condensed">
                <thead>
                <tr>
                    <th>Datu Basea</th>
                    <th>Bilaketa</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.tabla }}</td>
                        <td>{{ log.description }}</td>
                        <td><a class="btn btn-sm" href="{{ log.url }}">Bilatu</a></td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-sm-1"></div>
    </div><!-- /.box-body -->

</div>
