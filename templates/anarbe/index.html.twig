{% extends 'base.html.twig' %}

{% block title %}Añarbe{% endblock %}
{% block header %}Añarbe{% endblock %}
{% block header_desc %}Zerrenda{% endblock %}
{% block breadcrumbs %}
    <li class="active">Añarbe</li>
    <li class="active">Zerrenda</li>
{% endblock %}

{% block body %}
<div class="row">

    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">

                <a href="{{ path('anarbe_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Berria</a>

                <div class="box-tools">
                    <form action="{{ path('anarbe_index') }}" method="get">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input id="filter" type="text" name="filter" class="form-control pull-right" placeholder="Buscar" value="{{ app.request.query.get('filter') }}">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                    Erregistro kopurua: {{ anarbes.getTotalItemCount |number_format(0, ',', '.') }}
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(anarbes, 'Expediente', 'a.expediente') }}</th>
                            <th>{{ knp_pagination_sortable(anarbes, 'Fecha', 'a.fecha') }}</th>
                            <th>{{ knp_pagination_sortable(anarbes, 'Clasificacion', 'a.clasificacion') }}</th>
                            <th>{{ knp_pagination_sortable(anarbes, 'Signatura', 'a.signatura') }}</th>
                            <th>{{ knp_pagination_sortable(anarbes, 'Observaciones', 'a.observaciones') }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for anarbe in anarbes %}
                            <tr>
                                {#                            {{ dump(amp) }}#}
                                <td>{{ anarbe.expediente|length > 150 ? anarbe.expediente|slice(0,150)~'...' : anarbe.expediente}}</td>
                                <td>{{ anarbe.fecha }}</td>
                                <td>{{ anarbe.clasificacion }}</td>
                                <td>{{ anarbe.signatura }}</td>
                                <td>{{ anarbe.observaciones }}</td>
                                <td>
                                    <ul class="list-inline">
                                        <li class=""><a href="{{ path('anarbe_show', {'id': anarbe.id}) }}"><i class="fas fa-eye"></i></a></li>
                                        <li class=""><a href="{{ path('anarbe_edit', {'id': anarbe.id}) }}"><i class="fas fa-edit"></i></a></li>
                                        <li class=""><a href="#" class="deleteBtn" data-id="{{ anarbe.id }}" data-token="{{ csrf_token('delete' ~ anarbe.id) }}"><i class="fas fa-trash text-danger"></i></a></li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="navigation text-center">
                                {{ knp_pagination_render(anarbes) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- box -->

        </div><!-- col-xs-12 -->
    </div> <!--row -->

    {#{{ include('amp/_delete_form.html.twig', {'amp': amp}) }}#}

    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('jsDeleteForm') }}
    {% endblock %}
