{% extends 'base.html.twig' %}

{% block title %}Entradas{% endblock %}
{% block header %}Entradas{% endblock %}
{% block header_desc %}{{ entrada.id }} ikusten{% endblock %}
{% block breadcrumbs %}
    <li class="active">Entradas</li>
    <li class="active">Ikusi</li>
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <div class="box-tools box-tools-left" data-toggle="tooltip" title="" data-original-title="Status">
                        <a class="btn btn-sm btn-primary" href="{{ path('entradas_edit', {'id': entrada.id}) }}"><i class="fas fa-edit"></i> Aldatu</a>
                        <a class="btn btn-sm btn-default" href="{{ path('entradas_index') }}"><i class="fa fa-fw fa-arrow-alt-circle-left" aria-hidden="true"></i> {{ 'Zerrendara itzuli' | trans }}</a>
                        <div class="box-tools pull-right">
                            <a id="btnPrint" class="btn btn-sm btn-default" href="{{ path('entradas_print', {'id': entrada.id}) }}"><i class="fa fa-fw fa-print"></i> {{ "Inprimitu" | trans }}</a>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">&nbsp;</div>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Data</th>
                            <td>{{ entrada.data  | raw }}</td>
                        </tr>
                        <tr>
                            <th>Igorlea</th>
                            <td>{{ entrada.igorlea  | raw }}</td>
                        </tr>
                        <tr>
                            <th>Deskribapena</th>
                            <td>{{ entrada.deskribapena  | raw }}</td>
                        </tr>
                        <tr>
                            <th>Signatura</th>
                            <td>{{ entrada.signatura | raw  }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('jsDeleteForm') }}
{% endblock %}
