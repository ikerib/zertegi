{% extends 'base.html.twig' %}

{% block title %}Obra txikiak{% endblock %}
{% block header %}Obra txikiak{% endblock %}
{% block header_desc %}Zerrenda{% endblock %}
{% block breadcrumbs %}
    <li class="active">Obra txikiak</li>
    <li class="active">Zerrenda</li>
{% endblock %}

{% block body %}
<div class="row">

    <div class="col-xs-12">

        {% include '_finder.html.twig' with {'table': 'obratxikiak', 'fields': fields, 'finderdata': finderdata , 'logs': logs } %}


        <div class="box">
            <div class="box-header">
                <div class="box-header">
                    <a href="{{ path('obratxikiak_new') }}" id="btnBerria" class="btn btn-primary" ><i class="fa fa-plus"></i>&nbsp; {{ "Berria" | trans }}</a>
                    <a href="{{ path('pdf') }}" id="btnPrint" class="btn btn-default">
                        <i class="fa fa-fw fa-print"></i>{{ "Inprimitu" | trans }}
                        {% if app.session.get('zertegi-selection') %}
                            ({{ kount }})
                        {% endif %}
                    </a>                    <a href="javascript:void(0);" id="btnClearSelection" class="btn btn-default">{{ "Ezabatu aukeraketa" | trans }}</a>
                </div>

                <div class="box-tools">
                    Erregistro kopurua: {{ obratxikiaks.getTotalItemCount |number_format(0, ',', '.') }}
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>
                                <label>
                                    <input id="checkAll" type="checkbox">
                                </label>
                            </th>
                            <th>{{ knp_pagination_sortable(obratxikiaks, 'Espedientea', 'a.espedientea') }}</th>
                            <th>{{ knp_pagination_sortable(obratxikiaks, 'Sailkapena', 'a.sailkapena') }}</th>
                            <th>{{ knp_pagination_sortable(obratxikiaks, 'Signatura', 'a.signatura') }}</th>
                            <th>{{ knp_pagination_sortable(obratxikiaks, 'Urtea', 'a.urtea') }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for obratxikiak in obratxikiaks %}
                            <tr>
                                <td><label>
                                        <input type="checkbox" name="chkSelecion[]" class="chkSelecion" value="{{ obratxikiak.id }}" data-table="obratxikiak"
                                                {% if obratxikiak.id in myselection %} checked {% endif %}
                                        >
                                    </label>
                                </td>
                                <td>{{ obratxikiak.espedientea | raw }}</td>
                                <td>{{ obratxikiak.sailkapena }}</td>
                                <td>{{ obratxikiak.signatura }}</td>
                                <td>{{ obratxikiak.urtea }}</td>
                                <td>
                                    <ul class="list-inline">
                                        <li class=""><a href="{{ path('obratxikiak_show', {'id': obratxikiak.id}) }}"><i class="fas fa-eye btnShow"></i></a></li>
                                        <li class=""><a href="{{ path('obratxikiak_edit', {'id': obratxikiak.id}) }}"><i class="fas fa-edit btnEdit"></i></a></li>
                                        <li class=""><a href="#" class="deleteBtn" data-delete-url="{{ path('obratxikiak_delete',{'id':obratxikiak.id}) }}"
                                                        data-id="{{ obratxikiak.id }}" data-token="{{ csrf_token('delete' ~ obratxikiak.id) }}"><i
                                                        class="fas fa-trash text-danger"></i></a></li>
                                    </ul>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="navigation text-center">
                                {{ knp_pagination_render(obratxikiaks) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- box -->

        </div><!-- col-xs-12 -->
    </div> <!--row -->

    {#{{ include('amp/_delete_form.html.twig', {'amp': amp}) }}#}

    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('jsDeleteForm') }}
    {% endblock %}
