{% extends 'base.html.twig' %}

{% block title %}Protokoloak{% endblock %}
{% block header %}Protokoloak{% endblock %}
{% block header_desc %}Zerrenda{% endblock %}
{% block breadcrumbs %}
    <li class="active">Protokoloak</li>
    <li class="active">Zerrenda</li>
{% endblock %}

{% block body %}
<div class="row">

    <div class="col-xs-12">

        {% include '_finder.html.twig' with {'table': 'protokoloak', 'fields': fields } %}

        <div class="box">
            <div class="box-header">
                <div class="box-header">
                    <a href="{{ path('protokoloak_new') }}" id="btnBerria" class="btn btn-primary" ><i class="fa fa-plus"></i>&nbsp; {{ "Berria" | trans }}</a>
                    <a href="{{ path('pdf') }}" id="btnPrint" class="btn btn-default">{{ "Inprimitu" | trans }}</a>
                    <a href="javascript:void(0);" id="btnClearSelection" class="btn btn-default">{{ "Ezabatu aukeraketa" | trans }}</a>
                </div>

                <div class="box-tools">
                    Erregistro kopurua: {{ protokoloaks.getTotalItemCount |number_format(0, ',', '.') }}
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>
                                <label>
                                    <input id="checkAll" type="checkbox">
                                </label>
                            </th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Artxiboa', 'a.artxiboa') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Saila', 'a.saila') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Signatura', 'a.signatura') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Eskribaua', 'a.eskribaua') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Data', 'a.data') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Laburpena', 'a.laburpena') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Datuak', 'a.datuak') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Oharrak', 'a.oharrak') }}</th>
                            <th>{{ knp_pagination_sortable(protokoloaks, 'Bilatzaileak', 'a.bilatzaileak') }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for protokoloak in protokoloaks %}
                            <tr>
                                <td><label>
                                        <input type="checkbox" name="chkSelecion[]" class="chkSelecion" value="{{ protokoloak.id }}" data-table="protokoloak"
                                                {% if protokoloak.id in myselection %} checked {% endif %}
                                        >
                                    </label>
                                </td>
                                <td>{{ protokoloak.artxiboa }}</td>
                                <td>{{ protokoloak.saila }}</td>
                                <td>{{ protokoloak.signatura }}</td>
                                <td>{{ protokoloak.eskribaua }}</td>
                                <td>{{ protokoloak.data }}</td>
                                <td>{{ protokoloak.laburpena }}</td>
                                <td>{{ protokoloak.datuak }}</td>
                                <td>{{ protokoloak.oharrak }}</td>
                                <td>{{ protokoloak.bilatzaileak }}</td>
                                <td>
                                    <ul class="list-inline">
                                        <li class=""><a href="{{ path('protokoloak_show', {'id': protokoloak.id}) }}"><i class="fas fa-eye btnShow"></i></a></li>
                                        <li class=""><a href="{{ path('protokoloak_edit', {'id': protokoloak.id}) }}"><i class="fas fa-edit btnEdit"></i></a></li>
                                        <li class=""><a href="#" class="deleteBtn" data-delete-url="{{ path('protokoloak_delete',{'id':protokoloak.id}) }}"
                                                        data-id="{{ protokoloak.id }}" data-token="{{ csrf_token('delete' ~ protokoloak.id) }}"><i
                                                        class="fas fa-trash text-danger"></i></a></li>
                                    </ul>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="navigation text-center">
                                {{ knp_pagination_render(protokoloaks) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- box -->

        </div><!-- col-xs-12 -->
    </div> <!--row -->

    {#{{ include('amp/_delete_form.html.twig', {'amp': amp}) }}#}

    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('jsDeleteForm') }}
    {% endblock %}
