{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block header %}{% endblock %}
{% block header_desc %}{% endblock %}
{% block breadcrumbs %}
{% endblock %}

{% block body %}
    <p>&nbsp;</p>
<div class="row">

    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                {{ "Bases de datos y total de registros" | trans }}
            </div>
                <div class="box-body">
                    {% for table in tables %}

                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <a href="{{ "/" ~ app.request.locale ~ "/admin/" ~ table.table_name }}">
                                <div class="info-box">
                                    <span class="info-box-icon bg-aqua"></span>

                                    <div class="info-box-content">
                                        <span class="info-box-text">{{ table.table_name }}</span>
                                        <span class="info-box-number">{{ table.table_rows |number_format(0, ',', '.') }}</span>
                                    </div>
                                    <!-- /.info-box-content -->
                                </div>
                            </a>
                            <!-- /.info-box -->
                        </div><!-- col-md-3 col-sm-6 col-xs-12 -->

                    {% endfor %}
                </div>
            </div><!-- box -->

        </div><!-- col-xs-12 -->
    </div> <!--row -->

    {#{{ include('amp/_delete_form.html.twig', {'amp': amp}) }}#}

    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('jsDeleteForm') }}
    {% endblock %}
