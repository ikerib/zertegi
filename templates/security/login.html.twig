{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('cssLogin') }}
{% endblock stylesheets %}

{% block body_tag %}
    class="hold-transition login-page"
{% endblock %}

{% block wrapper %}

    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Zer</b>tegi</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <div class="row">
                <div class="col-sm text-center">
                    <span class="mb-4"><i class="fas fa-user fa-5x"></i></span>
                </div>
            </div>
            <p class="login-box-msg">Hasi saioa</p>

            <form action="{{ path('login') }}" method="post">
                <div class="form-group has-feedback">
                    <input type="text" id="username" class="form-control" placeholder="erabiltzailea" required autofocus name="_username" value="{{ last_username }}" />
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="password" name="_password" class="form-control" placeholder="pasahitza" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8 text-center">
                        {% if error %}
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>

                        {% endif %}
                    </div>
                    <div class="col-sm-2"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-6">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me" checked /> Oroitu nazazu
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Hasi saioa</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>


        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->






