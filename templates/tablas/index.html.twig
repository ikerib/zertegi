{% extends 'base.html.twig' %}

{% block title %}Tabla{% endblock %}
{% block header %}Tabla{% endblock %}
{% block header_desc %}Zerrenda{% endblock %}
{% block breadcrumbs %}
    <li class="active">Tabla</li>
    <li class="active">Zerrenda</li>
{% endblock %}

{% block body %}
<div class="row">

    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                <div class="box-header">
                    <a href="{{ path('tablas_new') }}" id="btnBerria" class="btn btn-primary" ><i class="fa fa-plus"></i>&nbsp; {{ "Berria" | trans }}</a>
                    <a href="{{ path('pdf') }}" id="btnPrint" class="btn btn-default">{{ "Inprimitu" | trans }}</a>
                    <a href="javascript:void(0);" id="btnClearSelection" class="btn btn-default">{{ "Ezabatu aukeraketa" | trans }}</a>
                </div>

                <div class="box-tools">
                    <form action="{{ path('tablas_index') }}" method="get">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input id="filter" type="text" name="filter" class="form-control pull-right" placeholder="Buscar" value="{{ app.request.query.get('filter') }}">

                            <div class="input-group-btn">
                                <button id="btnFilter" type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                    Erregistro kopurua: {{ tablas.getTotalItemCount |number_format(0, ',', '.') }}
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>
                                <label>
                                    <input id="checkAll" type="checkbox">
                                </label>
                            </th>
                            <th>{{ knp_pagination_sortable(tablas, 'Serie', 'a.Serie') }}</th>
                            <th>{{ knp_pagination_sortable(tablas, 'Unidad', 'a.Unidad') }}</th>
                            <th>{{ knp_pagination_sortable(tablas, 'Resolucion', 'a.Resolucion') }}</th>
                            <th>{{ knp_pagination_sortable(tablas, 'Observaciones', 'a.Observaciones') }}</th>
                            <th>{{ knp_pagination_sortable(tablas, 'Fecha', 'a.Fecha') }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for tabla in tablas %}
                            <tr>
                                <td><label>
                                        <input type="checkbox" name="chkSelecion[]" class="chkSelecion" value="{{ tabla.id }}" data-table="tablas"
                                                {% if tabla.id in myselection %} checked {% endif %}
                                        >
                                    </label>
                                </td>
                                <td>{{ tabla.serie }}</td>
                                <td>{{ tabla.unidad }}</td>
                                <td>{{ tabla.resolucion }}</td>
                                <td>{{ tabla.observaciones }}</td>
                                <td>{{ tabla.fecha }}</td>
                                <td>
                                    <ul class="list-inline">
                                        <li class=""><a href="{{ path('tablas_show', {'id': tabla.id}) }}"><i class="fas fa-eye btnShow"></i></a></li>
                                        <li class=""><a href="{{ path('tablas_edit', {'id': tabla.id}) }}"><i class="fas fa-edit btnEdit"></i></a></li>
                                        <li class=""><a href="#" class="deleteBtn" data-delete-url="{{ path('tablas_delete',{'id':tabla.id}) }}" data-id="{{ tabla.id }}"
                                                        data-token="{{ csrf_token('delete' ~ tabla.id) }}"><i class="fas fa-trash text-danger"></i></a></li>
                                    </ul>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="navigation text-center">
                                {{ knp_pagination_render(tablas) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- box -->

        </div><!-- col-xs-12 -->
    </div> <!--row -->

    {#{{ include('amp/_delete_form.html.twig', {'amp': amp}) }}#}

    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('jsDeleteForm') }}
    {% endblock %}
