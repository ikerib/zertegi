{% extends 'base.html.twig' %}

{% block title %}Tablas{% endblock %}
{% block header %}Tablas{% endblock %}
{% block header_desc %}{{ tabla.id }} ikusten{% endblock %}
{% block breadcrumbs %}
    <li class="active">Tablas</li>
    <li class="active">Ikusi</li>
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <div class="box-tools box-tools-left" data-toggle="tooltip" title="" data-original-title="Status">
                        <a class="btn btn-sm btn-primary" href="{{ path('tablas_edit', {'id': tabla.id}) }}"><i class="fas fa-edit"></i> Aldatu</a>
                        <a class="btn btn-sm btn-default" href="{{ path('tablas_index') }}"><i class="fa fa-fw fa-arrow-alt-circle-left" aria-hidden="true"></i> {{ 'Zerrendara itzuli' | trans }}</a>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
                                Etiketa inprimatu
                            </button>
                            <a id="btnPrint" class="btn btn-sm btn-default" href="{{ path('tablas_print', {'id': tabla.id}) }}"><i class="fa fa-fw fa-print"></i> {{ "Inprimitu" | trans }}</a>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">&nbsp;</div>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Serie</th>
                            <td>{{ tabla.serie  | raw }}</td>
                        </tr>
                        <tr>
                            <th>Unidad</th>
                            <td>{{ tabla.unidad }}</td>
                        </tr>
                        <tr>
                            <th>Resolucion</th>
                            <td>{{ tabla.resolucion  | raw }}</td>
                        </tr>
                        <tr>
                            <th>Observaciones</th>
                            <td>{{ tabla.observaciones | raw  }}</td>
                        </tr>
                        <tr>
                            <th>Fecha</th>
                            <td>{{ tabla.fecha }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {{ include('tablas/_apli_modal.html.twig') }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('jsDeleteForm') }}
{% endblock %}
