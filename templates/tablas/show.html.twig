{% extends 'base.html.twig' %}

{% block title %}Tablas{% endblock %}
{% block header %}Tablas{% endblock %}
{% block header_desc %}{{ tabla.id }} ikusten{% endblock %}
{% block breadcrumbs %}
    <li class="active">Tablas</li>
    <li class="active">Ikusi</li>
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <div class="box-tools box-tools-left" data-toggle="tooltip" title="" data-original-title="Status">
                        <a class="btn btn-sm btn-primary" href="{{ path('tablas_edit', {'id': tabla.id}) }}"><i class="fas fa-edit"></i> Aldatu</a>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">&nbsp;</div>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ tabla.id }}</td>
                        </tr>
                        <tr>
                            <th>Serie</th>
                            <td>{{ tabla.serie }}</td>
                        </tr>
                        <tr>
                            <th>Unidad</th>
                            <td>{{ tabla.unidad }}</td>
                        </tr>
                        <tr>
                            <th>Resolucion</th>
                            <td>{{ tabla.resolucion }}</td>
                        </tr>
                        <tr>
                            <th>Observaciones</th>
                            <td>{{ tabla.observaciones }}</td>
                        </tr>
                        <tr>
                            <th>Fecha</th>
                            <td>{{ tabla.fecha }}</td>
                        </tr>
                        <tr>
                            <th>Knosysid</th>
                            <td>{{ tabla.knosysid }}</td>
                        </tr>
                        <tr>
                            <th>Numdoc</th>
                            <td>{{ tabla.numdoc }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('jsDeleteForm') }}
{% endblock %}
